{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 20",
  
    "_version": "20.17.0",
  
    "compilerOptions": {
      "lib": ["ES2022"],
      "module": "Node16",
      "target": "ES2022",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node16",

      "outDir": "lib",
      "declaration": true
    },

    "include": ["src/**/*"],
    "exclude": ["lib/**/*", "test/**/*", "node_modules"]
}